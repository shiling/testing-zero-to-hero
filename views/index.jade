						td(class="pokemon-card-stats-label") 
							b üõ°Ô∏èDefense
						td(class="pokemon-card-stats-value")= pokemon.defense
					tr
						td(class="pokemon-card-stats-label") 
							b üíéSpecial Attack
						td(class="pokemon-card-stats-value")= pokemon.sp_attack
					tr
						td(class="pokemon-card-stats-label") 
							b üìøSpecial Defense
						td(class="pokemon-card-stats-value")= pokemon.sp_defense
